<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context=".Fragment.HomeUserFragment">
   <ScrollView
       android:layout_margin="10dp"
       android:layout_width="match_parent"
       android:layout_height="match_parent">
       <LinearLayout
           android:orientation="vertical"
           android:layout_width="match_parent"
           android:layout_height="match_parent">
           <RelativeLayout
               android:orientation="horizontal"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textSize="22dp"
                   android:textColor="#fff"
                   android:textStyle="bold"
                   android:text="Nổi bật"/>

                   <TextView
                       android:id="@+id/tvname"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_centerHorizontal="true"
                       android:text="Name"
                       android:textStyle="bold"
                       android:textSize="25sp"
                       android:textColor="@color/white"/>
                   <ImageView
                       android:id="@+id/ivdangxuat"
                       android:layout_width="30dp"
                       android:layout_height="30dp"
                       android:layout_alignParentEnd="true"
                       android:src="@drawable/ic_baseline_logout"/>


               </RelativeLayout>

           <androidx.recyclerview.widget.RecyclerView
               android:layout_weight="2"
               android:id="@+id/recHomeNoiBat"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"/>

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textSize="22dp"
               android:textStyle="bold"
               android:textColor="#fff"
               android:text="Danh sách kho"/>
           <androidx.recyclerview.widget.RecyclerView
               android:id="@+id/recHomeUser"
               android:layout_width="match_parent"
               android:layout_height="match_parent"/>
       </LinearLayout>
   </ScrollView>

</LinearLayout>