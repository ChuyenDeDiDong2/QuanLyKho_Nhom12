<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cvchukhodc"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <RelativeLayout
        android:id="@+id/rl_chat_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivpeople_hk"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/ic_all_people" />
        <LinearLayout
            android:id="@+id/lnthong_tin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/ivpeople_hk"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:id="@+id/tvtenguoitocao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="..."
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvhangbitocao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="..."
                android:textColor="@color/black" />
        </LinearLayout>
        <RelativeLayout
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/ic_baseline_soxuong_blue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RelativeLayout>
    </RelativeLayout>

</androidx.cardview.widget.CardView>