<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="00px">
        <LinearLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                style="@style/wrap_wrap_center"
                android:orientation="horizontal">




                <LinearLayout
                    android:id="@+id/btnStaff"
                    style="@style/w_wr_centerh_vertical">


                    <RelativeLayout
                        style="@style/styleButton_catelogy"
                        android:background="@drawable/card1"
                        android:elevation="8dp">


                        <ImageView
                            android:id="@+id/imgTTCB"
                            style="@style/imade_main"
                            android:src="@drawable/ic_people_24" />

                    </RelativeLayout>

                    <TextView
                        style="@style/w_wr_text_catelogy"
                        android:text="@string/staft" />
                </LinearLayout>

            </LinearLayout>



            <LinearLayout
                style="@style/wrap_wrap_center"
                android:orientation="horizontal">

                <LinearLayout

                    android:id="@+id/btnDepartment"
                    style="@style/w_wr_centerh_vertical">


                    <RelativeLayout
                        style="@style/styleButton_catelogy"
                        android:background="@drawable/card1"
                        android:elevation="8dp">


                        <ImageView
                            android:id="@+id/imgMH"
                            style="@style/imade_main"
                            android:src="@drawable/ic_desktop_color_32" />

                    </RelativeLayout>

                    <TextView
                        style="@style/w_wr_text_catelogy"
                        android:text="@string/department" />
                </LinearLayout>


            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>