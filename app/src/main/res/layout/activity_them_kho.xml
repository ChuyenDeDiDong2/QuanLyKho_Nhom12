<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_grey_background"
    tools:context=".Activity.ThemKhoActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:focusableInTouchMode="true"
        android:focusable="true"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/toolbar"/>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                style="@style/area_layout_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">


                    <androidx.cardview.widget.CardView
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        app:cardCornerRadius="360dp">

                        <ImageView
                            android:id="@+id/ivKhoHang"
                            android:layout_width="match_parent"
                            android:src="@drawable/ic_avartar_48"
                            android:scaleType="centerInside"
                            android:layout_height="match_parent"/>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <!-- Tên kho -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tên kho hàng"
                            android:layout_marginBottom="5dp"
                            android:textColor="@color/color_black"
                            android:textSize="20sp"/>

                        <EditText
                            android:id="@+id/edt_activity_add_staft_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:imeOptions="actionDone"
                            android:inputType="text"
                            android:maxLines="1"
                            android:drawableLeft="@drawable/ic_people_24"
                            android:drawablePadding="3dp"
                            android:background="@drawable/state_background_text_box_white"
                            android:hint="Nhập tên kho"/>

                    </LinearLayout>
                    <!-- dien tich -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Diện tích"
                            android:layout_marginBottom="5dp"
                            android:textColor="@color/color_black"
                            android:textSize="20sp"/>

                        <EditText
                            android:id="@+id/txtDientich"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:imeOptions="actionDone"
                            android:inputType="text"
                            android:maxLines="1"
                            android:drawableLeft="@drawable/ic_people_24"
                            android:drawablePadding="3dp"
                            android:background="@drawable/state_background_text_box_white"
                            android:hint="Nhập diện tích kho"/>

                    </LinearLayout>



                    <!-- Số điện thoại -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/phone"
                            android:layout_marginBottom="5dp"
                            android:textColor="@color/color_black"
                            android:textSize="20sp"/>

                        <EditText
                            android:id="@+id/edt_activity_add_staft_phone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:imeOptions="actionDone"
                            android:inputType="phone"
                            android:maxLines="1"
                            android:drawableLeft="@drawable/ic_phone_24"
                            android:drawablePadding="3dp"
                            android:background="@drawable/state_background_text_box_white"
                            android:hint="@string/enter_phone"/>

                    </LinearLayout>

                    <!-- Email -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/email"
                            android:layout_marginBottom="5dp"
                            android:textColor="@color/color_black"
                            android:textSize="20sp"/>

                        <EditText
                            android:id="@+id/edt_activity_add_staft_email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:imeOptions="actionDone"
                            android:inputType="textEmailAddress"
                            android:maxLines="1"
                            android:drawableLeft="@drawable/ic_mail_24"
                            android:drawablePadding="3dp"
                            android:background="@drawable/state_background_text_box_white"
                            android:hint="@string/enter_email"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:text="Chọn Loại kho"
                            android:textColor="@color/color_black"
                            android:textSize="20sp" />


                        <Spinner
                            android:id="@+id/spnloai"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/state_background_text_box_white" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:text="Tình Trạng Kho"
                            android:textColor="@color/color_black"
                            android:textSize="20sp" />
                        <TextView
                            android:id="@+id/tvtinhtrang"
                            android:textSize="20sp"
                            android:text="Chưa thuê"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>


                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/note"
                            android:layout_marginBottom="5dp"
                            android:textColor="@color/color_black"
                            android:textSize="20sp"/>

                        <EditText
                            android:id="@+id/edt_activity_add_staft_note"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:imeOptions="actionDone"
                            android:inputType="text"
                            android:maxLines="1"
                            android:drawableLeft="@drawable/ic_note_line_24"
                            android:drawablePadding="3dp"
                            android:background="@drawable/state_background_text_box_white"
                            android:hint="@string/enter_note"/>

                    </LinearLayout>



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginTop="45dp"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/btn_activity_add_staft_add"
                            android:layout_width="wrap_content"
                            android:layout_height="42dp"
                            android:paddingHorizontal="15dp"
                            android:text="@string/add"
                            tools:ignore="MissingClass" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="60dp"/>
                </LinearLayout>
            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</RelativeLayout>